{
  "private": true,
  "workspaces": [
    "packages/@demo/*",
    "packages/components"
  ],
  "name": "ml-core",
  "version": "0.0.1",
  "description": "核心仓库，包含组件，block，工具等",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "authors": {
    "name": "aimluo",
    "email": "aimluo@outlook.com"
  },
  "repository": "http://47.110.238.135:3080/web-front-end/ml-core.git",
  "scripts": {
    "dev": "father doc dev",
    "start": "yarn run dev",
    "build": "father build",
    "docs:build": "father doc build",
    "lerna": "lerna",
    "lerna:ver":"lerna version --no-push --no-commit-hooks",
    "commit": "git-cz",
    "c": "yarn run commit",
    "lint-staged:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty",
    "preview:dev": "parcel example/index.html --port=2001 -d example/dist",
    "preview:build": "parcel build example/index.html --public-url ./ -d dist/example"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,jsx}": "yarn run lint-staged:js",
    "**/*.{js,ts,tsx}": "yarn run lint-staged:js",
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "docz-theme-ztopia": "^0.1.3",
    "father": "^2.16.0",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "parcel-bundler": "^1.12.4",
    "typescript": "^3.3.3"
  },
  "license": "MIT"
}
